#include<stdio.h>
{
struct software application
char name[25];
char author[25];
char version[25];
int year;
float price;
};
int comparator for price(const void *p,const void *q)
{
return strcmp(((struct software application *)p)->price,((struct software application *)q)->name;)
}
int comparator for author(const void *p,const void *q)
{
return strcmp(((struct software application *)p)->author,((struct software application *)q)->name;)
}
int comparator for year(const void *p,const void *q)
{
return strcmp(((struct software application *)p)->year,((struct software application *)q)->name;)
